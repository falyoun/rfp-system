{
  "compilerOptions": {
    "outDir": "lib/esm",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom", "es2016", "es2017", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@app/errors": ["shared/errors"],
      "@app/database": ["shared/database"],
      "@app/filters": ["shared/filters"],
      "@app/interceptors": ["shared/interceptors"]
    }
  },
  "include": ["src/**/*", "shared/**/*"],
  "exclude": ["node_modules", "lib", "**/__tests__/*"]
}
